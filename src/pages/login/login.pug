include ~@/_imports

doctype html
html
  head(lang='ru')
    meta(charset='UTF-8')
    block seo
      meta(name='description', content='')
      meta(name='keywords', content='')
      link(rel='apple-touch-icon' sizes='180x180' href=require('../../public/img/favicons/apple-touch-icon.png'))
      link(rel='icon' type='image/png' sizes='32x32' href=require('../../public/img/favicons/favicon-32x32.png'))
      link(rel='icon' type='image/png' sizes='16x16' href=require('../../public/img/favicons/favicon-16x16.png'))
      link(rel='shortcut icon', href=require('../../public/img/favicons/favicon.ico'))
      link(rel='manifest' href='static/manifest.json')
      link(rel='mask-icon' href=require('../../public/img/favicons/safari-pinned-tab.svg') color='#5bbad5')
      meta(name='msapplication-TileColor' content='#ffffff')
      meta(name='theme-color' content='#ffffff')


    meta(
      name='viewport',
      content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0'
    )
    meta(
      http-equiv='X-UA-Compatible',
      content='ie=edge'
    )

    title Войти в личный кабинет

  body
    #login-pg
      .bg
      .body
        .content
          img.logo(src=require('../../public/img/logo.svg'), alt='Логотип')
          form.form
            +input('Логин', 'Ваша почта', 'email', 'login-pg')

            +input('Пароль', 'Ваш пароль', 'password', 'login-pg', true)

            .form-bottom
              +checkbox-label('Запомнить меня')
              +btn('Войти', 'submit', 'btn--green')