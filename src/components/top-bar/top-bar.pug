mixin top-bar(mixes)

  .top-bar(class=(mixes) && `${mixes}__top-bar`)
    ul.top-bar__menu
      li.top-bar__menu-item
        a.top-bar__settings-link(href='settings.html')
          include ./img/icons/1.svg
      li.top-bar__menu-item
        a.top-bar__support-link(href='support.html')
          include ./img/icons/2.svg
      li.top-bar__menu-item
        button.top-bar__btn-noti(type='button')
          include ./img/icons/3.svg
          .top-bar__menu-noti
      
    .top-bar__user
      .top-bar__add-user-group
        +btn-add
        span.top-bar__active-user
          img.top-bar__active-user-logo(src=require('../../components/top-bar/img/am-pm-logo.svg') alt='Логотип компании')
      
      .top-bar__user-info
        p.top-bar__user-name Фёдор Полкунов
        p.top-bar__user-company-name AM.PM
      
      .top-bar__user-more
        img.top-bar__arrow-icon(src=require('../../components/top-bar/img/arrow.svg') alt='Иконка выпадающего меню')

  

    